@model projektdotnet.Models.Opinion
@{
    Layout = "~/Views/Shared/_OtherLayout.cshtml";
}
@{
    ViewData["Title"] = "Create";
}


<div class="card text-white">

        <form asp-action="Create">
            <div class="m-2">
                <input class="form-check-input" type="checkbox" id="anonymous" name="anonymous" value="true" />
                <label class="text-white" for="anonymous">Send anonymously</label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating form-floating-outlined m-2">
                <label asp-for="Title" class="text-white control-label"></label>
            <input asp-for="Title" class="form-control text-white bg-transparent border-0 shadow-none" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">

        <div class="form-floating form-floating-outlined m-2 text-white">
            <label for="address-outline text-white">Description</label>
            <textarea asp-for="Description" class="form-control bg-transparent border-0 shadow-none text-white" id="address-outline"
                      placeholder="address" style="height: 100px"></textarea>
        </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success m-2" />
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary m-2">Back to List</a>

            </div>
        </form>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
