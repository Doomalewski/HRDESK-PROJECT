@model projektdotnet.Models.Employee
@{
    Layout = "~/Views/Shared/_OtherLayout.cshtml";
}
@{
    ViewData["Title"] = "Create";
}

<div class="main-content-center">
    <div class="card text-white">
        <h1 class="text-center" style="font-size: 2em;text-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5)">Create Employee</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating form-floating-outlined m-2">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control text-white bg-transparent border-0 shadow-none" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outlined m-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control text-white bg-transparent border-0 shadow-none" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outlined m-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control text-white bg-transparent border-0 shadow-none" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outlined m-2">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control text-white bg-transparent border-0 shadow-none" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success m-2" />
                <a class="btn btn-outline-primary m-2" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
