@model projektdotnet.Models.Room
@{
    Layout = "~/Views/Shared/_OtherLayout.cshtml";
}
@{
    ViewData["Title"] = "Create";
}


<div class="main-content-center">
    <div class="card text-white">
        <h1 class="text-center" style="font-size: 2em;text-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5)">Create room</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating form-floating-outlined m-2">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control text-white bg-transparent border-0 shadow-none" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outlined m-2">
                <label asp-for="RoomLevel" class="control-label"></label>
                <input asp-for="RoomLevel" class="form-control text-white bg-transparent border-0 shadow-none" />
                <span asp-validation-for="RoomLevel" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outlined m-2">
                <label asp-for="NumberOfSeats" class="control-label"></label>
                <input asp-for="NumberOfSeats" class="form-control text-white bg-transparent border-0 shadow-none" />
                <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outlined m-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control text-white bg-transparent border-0 shadow-none" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating form-floating-outlined m-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control text-white bg-transparent border-0 shadow-none" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success m-2" />
                <a class ="btn btn-outline-primary m-2" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
