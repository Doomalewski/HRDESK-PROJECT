@model projektdotnet.Models.Ticket
@{
    Layout = "~/Views/Shared/_OtherLayout.cshtml";
}
@{
    ViewData["Title"] = "Delete";
}

<div class="main-content-center">
<h3>Are you sure you want to delete this?</h3>
    <div class="card text-white">
        <div>
            <h4>Ticket</h4>
            <hr />
            <dl class="row">
                <strong>Sender:</strong>
                <dt class="card-text">
                    @await Html.PartialAsync("_EmployeeDetails", Model.Sender)
                </dt>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReceiverId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReceiverId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreationDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreationDate)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="TicketId" />
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
            </form>
        </div>
    </div>
</div>
